<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:background="@drawable/home_top_title_bg" >

        <View
            android:id="@+id/v_chat_fen"
            android:layout_width="0dp"
            android:layout_height="0.1dp"
            android:layout_centerInParent="true"
            android:background="@color/white4" />

        <TextView
            android:id="@+id/tv_cmnn_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/v_chat_fen"
            android:background="@drawable/border_radius_left_p"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="聊天"
            android:textColor="@color/chat_top_text_color" />

        <TextView
            android:id="@+id/tv_cmnn_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/v_chat_fen"
            android:background="@drawable/border_radius_right_n"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="5dp"
            android:text="通讯录"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_sub_type_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="部门通讯录"
            android:visibility="invisible"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content_cmnn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>